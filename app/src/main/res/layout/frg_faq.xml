<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.FaqFrg"
            android:padding="8dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp"
                android:layout_marginTop="16dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqQuestion"
                        android:text="Go Arena Nedir?"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqAnswer"
                        android:text="GO Arena Turkcell Saha Satış ekiplerinin günlük operasyonel işlemlerini tek bir uygulama üzerinden kolayca takibi ve yönetimine olanak sağlayan mobil ve web tabanlı uygulamadır."
                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp"
                android:layout_marginTop="16dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqQuestion"
                        android:text="Go Arena'yı kimler kullanabilir?"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqAnswer"
                        android:text="GO Arena'ya girmek için öncelikle Turkcell Bayi Yönetim Sistemi üzerinde tanımlı olmanız gerekmektedir. Uygulamaya Turkcell Kullanıcı Adı ve şifreniz ile login olabilirsiniz. Uygulamayı Turkcell Saha Satış ekipleri (Satış Direktörleri, Bölge Müdürleri, Satış Yöneticileri, Firma Sahipleri, Mağaza Müdürleri, Tim Elçiler) yanı sıra merkez ekiplerden de Satış Destek Sorumlusu, Hizmet Talep Sorumlusu, Hizmet Talep Yöneticisi ve Marka Koruma Sorumlusu kullanabilir."
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="16dp"
                android:layout_marginTop="16dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqQuestion"
                        android:text="Hangi Modülleri Kullanabilirim ?"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/tvFaqAnswer"
                        android:text="GO Arena kullanıcıları Turkcell Bayi Yönetim Sistemi üzerinde tanımlı oldukları unvan bazında yetkilendirildikleri modülleri görebilir/kullanabilir.
"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>